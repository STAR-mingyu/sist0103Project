package day0109;

import java.util.Scanner;

public class Book175_14 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// 배열 변수 선언과 배열 대입
		int[] scores = { 84, 90, 96 };

		// 배열 항목의 총합 구하기

		int sum = 0;
		for (int i = 0; i < scores.length; i++) {
			sum += scores[i];
		}

		System.out.println("총합 : " + sum);

		// 배열 항목의 평균 구하기
		double avg = (double) sum / scores.length;
		System.out.println("평균 : " + avg);

		System.out.println();
		
		
		
		System.out.println("===========");
		
		
		// 학생명과 점수를 입력_몇명인지는 입력해 주는 만큼
		//입력해 준 데이타로 출력을 하고 합계도 구해보자
		Scanner sc = new Scanner(System.in);
		
		int inwon;
		String [] name;
		int [] score;
		
		int tot = 0;
		double avg2 = 0;
		
		System.out.println("인원수를 입력하시오");
		inwon = Integer.parseInt(sc.nextLine());
		
		//인원수만큼 배열로 할당
		name = new String[inwon];
		score = new int[inwon];
		
		//인원수만큼 데이터 입력
		for(int i = 0;i<inwon;i++) {
			System.out.println(i + "번지 이름");
			name[i] = sc.nextLine();
			System.out.println(i + "번지 점수");
			score[i] = Integer.parseInt(sc.nextLine());
			
			//총점
			tot += score[i];
		}
		
		//계산
		avg=(double)tot/inwon;
		
		//출력
		
		System.out.println("번호\t 이름\t점수");
		System.out.println("==============================");
		for(int i = 0;i<inwon;i++) {
			System.out.println(i+1+"\t"+name[i]+"\t"+score[i]);
		}
		
		
		

	}

}
