package day0104;

public class Test {

	public static void main(String[] args) {
	
		// 변수는 args를 이용할 것
		/*
		 * 학생명 : 김선호 님 지역 : 부산 나이 : 23세
		 *
		 * ============================================= 김선호님의 자바점수는 88점 오라클점수는 77점 총
		 * 165점입니다
		 */
		
		String name = args[0];
		String area = args[1];
		int age = Integer.parseInt(args[2]);
		int java = Integer.parseInt(args[3]);
		int oracle = Integer.parseInt(args[4]);
		
		int total = java + oracle;
		
		System.out.println("학생명 :" + name);
		System.out.println("부산 :" + area);
		System.out.println("나이 :" + age);
		
		System.out.printf(name + "님의 자바점수는" + java + "점" + oracle + "점수는" + oracle + "점 총" + total + "점 입니다");
		
		
	}

}
